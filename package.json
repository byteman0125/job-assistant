{
  "name": "job-searcher",
  "version": "1.0.0",
  "description": "Automated Job Search Application for Remote Positions",
  "main": "src/main/main.js",
  "scripts": {
    "start": "set NODE_OPTIONS=--no-deprecation && electron . --no-cache",
    "start-auto": "set NODE_OPTIONS=--no-deprecation && electron . --no-cache",
    "start-manual": "concurrently \"ollama serve\" \"npm run start-auto\" --names \"Ollama,App\" --prefix-colors \"blue,green\"",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "job",
    "search",
    "remote",
    "automation",
    "electron"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^34.0.0",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "appId": "com.jobsearcher.app",
    "productName": "Job Searcher",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png",
      "category": "Utility"
    }
  },
  "dependencies": {
    "axios": "^1.12.2",
    "better-sqlite3": "^12.4.1",
    "puppeteer": "^24.24.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2"
  }
}
